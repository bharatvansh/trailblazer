{
  "schemaVersion": 1,
  "id": "trailblazer",
  "version": "${version}",
  "name": "Path Sharing",
  "description": "Client-side companion for Path sharing. Local rendering, recording, editing, and optional server sync and sharing when paired with the server plugin.",
  "authors": [
    "Mod MC (Satellite)"
  ],
  "contact": {
    "homepage": "https://github.com/bharatvansh/Path-Sharing",
    "sources": "https://github.com/bharatvansh/Path-Sharing",
    "issues": "https://github.com/bharatvansh/Path-Sharing/issues"
  },
  "license": "MIT",
  "icon": "assets/trailblazer/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      "com.trailblazer.fabric.TrailblazerFabricClient"
    ]
  },
  "mixins": [
    "trailblazer.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${fabric_loader_version}",
    "fabric-api": "*",
    "minecraft": "${minecraft_version}"
  }
}